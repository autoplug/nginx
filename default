#/etc/nginx/sites-available
# Default server configuration
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	#
	# listen 443 ssl default_server;
	# listen [::]:443 ssl default_server;
	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name _;
	client_max_body_size 6M;
	fastcgi_hide_header "Set-Cookie";

        location /telegram_metatrader_report {
        	proxy_pass http://localhost:8080;
        	proxy_http_version 1.1;
        	proxy_set_header Upgrade $http_upgrade;
        	proxy_set_header Connection 'upgrade';
        	proxy_set_header Host $host;
        	proxy_cache_bypass $http_upgrade;
        	#try_files $uri $uri/ =404;
        }

		location /report {
        	proxy_pass http://localhost:8080;
        	proxy_http_version 1.1;
        	proxy_set_header Upgrade $http_upgrade;
        	proxy_set_header Connection 'upgrade';
        	proxy_set_header Host $host;
        	proxy_cache_bypass $http_upgrade;
        	#try_files $uri $uri/ =404;
        }

        location / {
        	proxy_pass http://localhost:4000;
        	proxy_http_version 1.1;
        	proxy_set_header Upgrade $http_upgrade;
        	proxy_set_header Connection 'upgrade';
        	proxy_set_header Host $host;
        	proxy_cache_bypass $http_upgrade;
        	#try_files $uri $uri/ =404;
        }

		location =  /admin-frontend {
			root /var/www/admin-frontend/build;
			try_files /index.html =404;
		}

    	location ~ ^/admin-frontend(.*) {
		root /var/www/admin-frontend/build;
		try_files $1 $1/ /index.html =404;
    	}

        location ~ ^/image(.*)\.(png|jpg|jpeg|gif|bmp)$ {
		expires 10d;
		root /var/www/server/cache;
		fastcgi_hide_header "Set-Cookie";
        }

        location ~ ^/static(.*)\.(css|jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc|svg|woff|woff2|ttf)$ {
		expires 10d;
		root /var/www/server;
		fastcgi_hide_header "Set-Cookie";
        }

	location ~* \.(?:css|jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc|svg|woff|woff2|ttf)\$ {
		expires 10d;
		access_log off;
		add_header Cache-Control "public";
		fastcgi_hide_header "Set-Cookie";
        }

        #location ~* \.(pkg)$ {
          #root /var/www/mac;
        #}

}